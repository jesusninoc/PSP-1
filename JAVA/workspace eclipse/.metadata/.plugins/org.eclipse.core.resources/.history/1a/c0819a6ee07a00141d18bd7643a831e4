	public void start(){
		if (h1!=null && h2!=null && h2.isAlive() && h1.isAlive()){ //si el hilo est√° corriendo y vivo no hago nada
				}
		else
		{
			h1=new Thread(this);
			h1.start();
			h2=new Thread(this);
			h2.start();
		}
	}
	
	@Override
